<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="PlanificacionReceta.Views.RecetaView">
    <Border WidthRequest="350" StrokeThickness="4" Stroke="Gray" >
    <Grid  RowDefinitions=".8*,auto">
        
        <Image Grid.Row="0" WidthRequest="500" Source="{Binding Imagen}"></Image>
        <Label  HorizontalOptions="Center" FontSize="18" FontAttributes="Bold" TextTransform="Uppercase" Grid.Row="1" Text="{Binding Nombre}" TextColor="Black"></Label>
    </Grid>
    </Border>
</ContentView>
